{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "lib": ["ESNext"],
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "lib/**/*.ts",
    "cli/**/*.ts",
    "test/**/*.ts",
    "public-api.ts"
  ]
}
